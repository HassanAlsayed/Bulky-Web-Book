@model ContactUs

<h2>Contact Us</h2>

<form method="post">
    <input asp-for="To" class="form-control" value="hassan19alsayed@gmail.com" hidden />

    <div class="form-group">
        <label asp-for="From">From:</label>
        <input asp-for="From" class="form-control" value="@User.Identity.Name" readonly/>
        <span asp-validation-for="From" class="text-danger"></span>
    </div>
    
       
    <div class="form-group">
        <label asp-for="Subject">Subject:</label>
        <input asp-for="Subject" class="form-control" required />
        <span asp-validation-for="Subject" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Body">Body:</label>
        <textarea asp-for="Body" class="form-control" required></textarea>
        <span asp-validation-for="Body" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Send Email</button>
    <div class="text-danger">
        @ViewBag.error
    </div>

    <div class="text-success">
        @ViewBag.success
    </div>
</form>


