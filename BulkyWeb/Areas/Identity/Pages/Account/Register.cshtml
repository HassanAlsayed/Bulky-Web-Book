@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="w-100 card border-0 p-4">
    <div class="card-body border p-4">

        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h2 class="text-center text-white mb-4 custom-header">Create a new account.</h2>
            <hr />

            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control border" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email">Email</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <div class="form-floating">
                        <input asp-for="Input.Password" class="form-control border" autocomplete="new-password" />
                        <label asp-for="Input.Password">Password</label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-floating">
                        <input asp-for="Input.ConfirmPassword" class="form-control border" autocomplete="new-password" />
                        <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <div class="form-floating">
                        <input asp-for="Input.Name" class="form-control border" />
                        <label asp-for="Input.Name">Name</label>
                        <span asp-validation-for="Input.Name" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-floating">
                        <input asp-for="Input.StreeAddress" class="form-control border" />
                        <label asp-for="Input.StreeAddress">Street Address</label>
                        <span asp-validation-for="Input.StreeAddress" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <div class="form-floating">
                        <input asp-for="Input.City" class="form-control border" />
                        <label asp-for="Input.City">City</label>
                        <span asp-validation-for="Input.City" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-floating">
                        <input asp-for="Input.State" class="form-control border" />
                        <label asp-for="Input.State">State</label>
                        <span asp-validation-for="Input.State" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <div class="form-floating">
                        <input asp-for="Input.PostalCode" class="form-control border" />
                        <label asp-for="Input.PostalCode">Postal Code</label>
                        <span asp-validation-for="Input.PostalCode" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-floating">
                        <input asp-for="Input.PhoneNumber" class="form-control border" />
                        <label asp-for="Input.PhoneNumber">PhoneNumber</label>
                        <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                    </div>
                </div>
            </div>


<button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>

        </form>

    </div>
</div>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    .custom-header {
        background-color: black;
        padding: 1rem;
        border-radius: 0.25rem;
    }

    .border {
        border: 2px solid #007bff;
        border-radius: 0.25rem;
    }
</style>
