@model IEnumerable<Product>

<form method="post">
    <div class="w-120 card border-0 p-4">
        <div class="card-header bg-dark" data-bs-theme="dark" ml-0 py-3">
            <div class="row">
                <div class="col-20 text-center">
                    <h2 class="text-white py-2">Product List</h2>
                </div>
            </div>
        </div>

        <div class="card-body border p-4">
            <div class="row p-3">
                <div class="col-6 offset-6 text-end">
                    <a asp-controller="Product" asp-action="AddProduct" class="btn btn-primary">
                        <span class="bi bi-plus-circle"></span> Add New Product
                    </a>
                </div>
            </div>
            <table id="tblData" class="table table-bordered table-striped mt-4 col-12 text-center">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>ISBN</th>
                        <th>Price</th>
                        <th>Author</th>
                        <th>Category Name</th>
                        <th></th>
                    </tr>
                </thead>
            
            </table>
        </div>
    </div>
</form>


   @section scripts{
 <script src="~/js/product.js"></script>
     }